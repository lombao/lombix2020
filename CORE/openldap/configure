

autoconf || exit 1

./configure --prefix=$PREFIX      	\
            --mandir=$PREFIX/share/man	\
	    --sbindir=$PREFIX/sbin	\
            --sysconfdir=$PREFIX/etc    \
            --localstatedir=/var  	\
            --libexecdir=$PREFIX/lib 	\
            --disable-static      	\
            --disable-debug       	\
            --with-tls=openssl    	\
	    --with-cyrus-sasl		\
	    --enable-perl		\
            --enable-dynamic      	\
            --enable-crypt        	\
            --enable-spasswd      	\
            --enable-slapd        	\
            --enable-modules      	\
            --enable-rlookups     	\
	    --enable-memberof		\
            --enable-backends=mod 	\
            --disable-ndb         	\
            --disable-shell       	\
	    --disable-sql 		\
            --disable-bdb         	\
            --disable-hdb         	\
            --enable-overlays=mod 
