./configure --prefix=$PREFIX  			\
            --disable-static  			\
            --enable-threaded-resolver 		\
	    --enable-pthreads			\
	    --enable-cookies			\
  	    --enable-crypto-auth		\
	    --enable-imap			\
	    --enable-pop3			\
	    --enable-ftp			\
	    --enable-telnet			\
	    --enable-smtp			\
	    --enable-proxy			\
	    --enable-http			\
	    --enable-https			\
	    --enable-file			\
	    --with-zlib=$(pkg-config --variable=prefix zlib)		\
	    --with-gnutls=$(pkg-config --variable=prefix gnutls)	\
	    --with-libidn2=$(pkg-config --variable=prefix libidn2)	\
	    --with-libssh2=$(pkg-config --variable=prefix libssh2)	\
	    --with-random=/dev/urandom		\
            --with-ca-bundle=$LMBX_CA_CERT	

